#!/bin/bash

echo "Writing rungoma to Install_Prefix"

cd $1
mkdir bin
cd bin

echo '#!/bin/bash' > rungoma
echo '' >> rungoma
echo '### This is an autogenerated file which will run goma' >> rungoma
### Tells the file to add some temporary environmental variables
echo 'LD_LIBRARY_PATH='\"$2'/lib:'$3'/lib:$LD_LIBRARY_PATH'\"' PATH='\"$2'/bin:'$3'/bin:$PATH'\"' '$1'/bin/goma $@' >> rungoma

### Makes the file executable without changing permissions
chmod a+x rungoma
